<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/fuzhu_text_homepage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_page2_modeselect"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/fuzhu_text_homepage2"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/home_page2_moshi_gongzuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/main_homepage_button_margen"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="@dimen/main_home_image_pading"
            android:src="@drawable/moshi_gongzuo" />

        <ImageView
            android:id="@+id/home_page2_moshi_shuimian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/main_homepage_button_margen"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="@dimen/main_home_image_pading"
            android:src="@drawable/moshi_shuimian" />

        <ImageView
            android:id="@+id/home_page2_moshi_yuedu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/main_homepage_button_margen"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="@dimen/main_home_image_pading"
            android:src="@drawable/moshi_yuedu" />

        <ImageView
            android:id="@+id/home_page2_moshi_yule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/main_homepage_button_margen"
            android:layout_weight="1"
            android:background="@color/white"
            android:padding="@dimen/main_home_image_pading"
            android:src="@drawable/moshi_yule" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>