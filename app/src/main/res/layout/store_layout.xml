<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/home_page_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ToolbarTheme"
        android:fitsSystemWindows="true"
        >
        <TextView
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="20dp"
            android:text="智能宿舍"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        app:layout_constraintTop_toBottomOf="@+id/home_page_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/sushe_view1"
                layout="@layout/sushe_page_view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_page_lump_height"
                tools:layout_editor_absoluteX="16dp" />

            <ImageView
                android:id="@+id/app_dormitry_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>







    </ScrollView>





</android.support.constraint.ConstraintLayout>